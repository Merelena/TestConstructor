<TestConstructor>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb:  .23, .4, .56
        Rectangle:
            size: self.size
    BoxLayout:
        size_hint: 1, .4
        Image:
            source: '1.png'
    BoxLayout:
        size_hint: 1, .5
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text:'[size=25][color=f7bc51][b]КОНСТРУКТОР ТЕСТОВЫХ ЗАДАНИЙ[/b][/color][/size]\n[size=18][color=f7bc51]Рандомизация вариантов проверочных работ[/color][/size]'
                markup: True
        BoxLayout:
            size_hint: .5, 1
            canvas:
                Color:
                    rgb:  .99, .95, .73
                Rectangle:
                    size: self.size
                    pos: self.x + 25, self.y
            Label:
                id: label1
                markup: True
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                padding: 45, 0, 45, 0
                size_hint: 1, .15
                orientation: 'horizontal'
                Button:
                    text: 'Открыть тест'
                    on_release: root.open_test()
                TextInput:
                    id:text_input3
                    text: ' Название теста'
            TextInput:
                padding: 45, 0, 45, 0
                id: tests
                font_size: 25
                readonly: True
                background_color: 0, 0, 0, 0
                foreground_color: 1, 1, 1, 1
        GridLayout:
            size_hint: .433, 1
            cols: 1
            canvas:
                Color:
                    rgb:  1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.x, self.y
            Button:
                text: '[color=3a6790][size=20][b]Создать тест[/b][/size][/color]'
                markup: True
                background_color: 0, 0, 0, 0
                on_release: root.button_create_test()
            Label:
                size_hint: 1, .5
                text: '[color=3a6790]Название теста:[/color]'
                markup: True
            TextInput:
                id: text_input1
                font_size: 20
                halign: 'center'
                multiline: False
                on_text_validate: root.button_create_test()
            Button:
                text: '[color=3a6790][size=20][b]Печать теста в файл[/b][/size][/color]'
                markup: True
                background_color: 0, 0, 0, 0
            Label:
                size_hint: 1, .5
                text: '[color=3a6790]Название теста:[/color]'
                markup: True
            TextInput:
                id: text_input2
                font_size: 20
                halign: 'center'
                multiline: False
                on_text_validate: root.button_create_test()
            Button:
                text: '[color=3a6790][size=20][b]Выход[/b][/size][/color]'
                markup: True
                background_color: 0, 0, 0, 0
                on_release: app.get_running_app().stop()
    BoxLayout:
        size_hint: 1, .4
        Image:
            source: '2.png'
<EditTest>
    title: 'Редактор теста'
    BoxLayout:
        spacing: 10
        orientation: 'horizontal'
        BoxLayout:
            padding: 10
            orientation: 'vertical'
            TextInput:
                id: task
                text: 'Текст задания'
            TextInput:
                id: tasks
                readonly: True
                background_color: 0, 0, 0, 0
                foreground_color: 1, 1, 1, 1
        GridLayout:
            spacing: 10
            padding: 10
            size_hint: .8, 1
            cols: 2
            Label:
                text: 'Уровень задания'
            TextInput:
                id: level
            Button:
                text: 'Вставить рисунок'
                on_release: root.paste_picture()
            TextInput:
                id: picture
                text: 'Имя файла с расширением'
            Button:
                text: 'Удалить задание'
                on_release: root.delete_task()
            TextInput:
                id: delete_task_number
                text: '№ задания'
            Button:
                text: 'Новое задание'
                on_release: root.add_task()
            Button:
                text: 'Очистить задание'
                on_release: root.clean_task()
            Button:
                text: 'Открыть задание'
                on_release: root.open_task()
            TextInput:
                id: task_number
                text: '№ задания'
            Button:
                text: 'Сохранить задание'
                on_release: root.save_task()
            Button:
                text: 'Удалить тест'
                on_release: root.delete_test()
            Button:
                text: 'Назад'
                on_release: root.return_to_base_window()

