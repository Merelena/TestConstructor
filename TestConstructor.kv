<Start>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb:  .23, .4, .56
        Rectangle:
            size: self.size
    BoxLayout:
        Image:
            source: '1.png'
    BoxLayout:
        size_hint: 1, .5
        Label:
            text: '[anchor=title1][color=f7bc51]КОНСТРУКТОР ТЕСТОВЫХ ЗАДАНИЙ[/color]'
            markup: True
            font_size: 39
    BoxLayout:
        canvas:
            Color:
                rgb:  1, 1, 1
            Rectangle:
                size: self.size
                pos: self.x, self.y
        Label:
            text: '[color=3a6790]ВВЕДИТЕ НАЗВАНИЕ УЧЕБНОГО ПРЕДМЕТА[/color]'
            markup: True
            font_size: 21
    BoxLayout:
        padding: 60, 0, 60, 40
        canvas:
            Color:
                rgb:  1, 1, 1
            Rectangle:
                size: self.size
                pos: self.x, self.y + 5
        TextInput:
            id: text_input1
            border: 4, 4, 4, 4
            font_size: 21
            halign: 'center'
            valign: 'middle'
    BoxLayout:
        padding: 350, 0, 350, 0
        canvas:
            Color:
                rgb:  1, 1, 1
            Rectangle:
                size: self.size
                pos: self.x, self.y + 5
        Button:
            on_release: root.button_continue()
            background_color: 0, 0, 0, 0
            Image:
                source: 'Продолжить.png'
                pos: self.parent.x, self.parent.y
                size: 100, 100
                allow_stretch: True
    BoxLayout:
        canvas:
            Color:
                rgb:  1, 1, 1
            Rectangle:
                size: self.size
                pos: self.x, self.y + 5
        Button:
            id: button1
            opacity: 0
            background_color: 0, 0, 0, 0
            text: '[color=e6594b]Учебного предмета не существует. [/color][color=f7bc51]Добавить[/color]'
            markup: True
            font_size: 15
            on_release: root.button_add_subject()
    BoxLayout:
        Image:
            source: '2.png'
<AddSubject>:
    size_hint: .4, .25
    title: 'Добавить предмет'
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: text_input2
            size_hint: 1, .8
            halign: 'center'
            text: 'Название учебного предмета'
            font_size: 15
            multiline: False
            do_undo: True
            on_focus: root.delete_text()
            on_text_validate: root.add_subject()
        Button:
            text: 'Добавить'
            font_size: 20
            on_release: root.add_subject()

